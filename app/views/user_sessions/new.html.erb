<%= render 'layouts/header' %>


<div class="container-login">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1>ログイン画面</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <div class="google-icon my-4">
        <%= link_to auth_at_provider_path(provider: :google), class: "btn btn-light d-flex align-items-center justify-content-center gap-2 border shadow-sm mx-auto", style: "max-width: 250px;" do %>
          <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google logo" width="20" height="20" style="object-fit: contain;">
          <span>Googleでログイン</span>
        <% end %>
      </div>


      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
        <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path %>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>

<style>
    .form-control {
      margin: 10px 15px;
      padding: 10px 15px;
      border: 1px solid #ccc; /* 薄いグレーのボーダー */
      border-radius: 4px;
      color: black;
    }

    .form-label {
        display: block;    
    }

    .btn {
      margin: 10px 15px;
      padding: 10px 15px;
      border: 1px solid #ccc; /* 薄いグレーのボーダー */
      border-radius: 4px;
      background-color: #faa61a;
      color: white;
    }
</style>