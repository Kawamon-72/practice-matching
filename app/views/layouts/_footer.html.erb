<footer id="footer" class="footer-bottom">
  <div class="container-footer">
    <div class="row d-flex justify-content-center text-center">
      <div class="col-12 col-md-8 mx-auto">
        <% if !logged_in? %>
          <h5 class="footer-title">Practice Matching! © 2025</h5>
        <% else %>
          <div class="footer-icons">
            <%= link_to root_path, class: "icon-link" do %>
              <i class="fas fa-home"></i>
            <% end %>

            <%= link_to new_practice_match_path, class: "icon-link text-label" do %>
              募集
            <% end %>

            <%= link_to notifications_path, class: "icon-link" do %>
              <i class="fas fa-bell"></i>
            <% end %>

            <%= link_to chat_rooms_path, class: "icon-link" do %>
              <i class="fas fa-comments"></i>
            <% end %>

            <% if current_user&.profile.present? %>
              <%= link_to profile_path, class: "icon-link" do %>
                <i class="fas fa-user"></i>
              <% end %>
            <% else %>
              <%= link_to new_profile_path, class: "icon-link" do %>
                <i class="fas fa-user"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <style>
    .footer-bottom {
      background-color: #faa61a;
      padding: 20px 0;
      border-top: 1px solid #dee2e6;
    }

    .footer-title {
      color: #6c757d;
      margin-bottom: 0;
    }

    .footer-icons {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    .icon-link {
      font-size: 1.5rem;
      color: #343a40;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .icon-link:hover {
      color: #007bff;
    }

    .text-label {
      font-size: 1rem;
      font-weight: 500;
      padding: 0 5px;
    }

    @media (max-width: 576px) {
      .footer-icons {
        gap: 15px;
      }

      .icon-link {
        font-size: 1.3rem;
      }
    }
  </style>
</footer>
