<header id='header' class='header-top'>
  <div class='container'>
    <%= link_to 'Practice Maching', root_path %>
    <div class="hamburger-menu" id="hamburger-menu">
      <div class="menu" onclick="toggleMenu()">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>
      <ul id="menu-items" class="hidden">
        <% if !logged_in? %>
          <li>
            <%= link_to 'ログイン', login_path %>
          </li>
          <li>
            <%= link_to '新規登録', new_user_path %>
          </li>
          <li>
            <%= link_to 'パスワードを忘れた方', '#' %>
          </li>
          <li>
            <%= link_to '利用規約', '#' %>
          </li>
          <li>
            <%= link_to 'プライバシーポリシー', '#' %>
          </li>
        <% else %>
          <li>
            <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete } %>
          </li>
          <li>
            <%= link_to '利用規約', '#' %>
          </li>
          <li>
            <%= link_to 'プライバシーポリシー', '#' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

<style>
  .container {
    display: flex;
    flex-direction: row;
    width: 100%;
    box-sizing: border-box;
    background-color: #faa61a;
    color: white;
  }

  .hamburger-menu {
    cursor: pointer;
    padding: left;
    margin: 0 0 0 150px;
  }
  
  .menu {
    display: flex;
    flex-direction: column;
  }

  .bar {
    height: 3px;
    width: 30px;
    background-color: black;
    margin: 5px 0;
  }

  #menu-items.hidden {
    display: none;
  }
</style>

<script>
  function toggleMenu() {
    const menuItems = document.getElementById('menu-items');
    menuItems.classList.toggle('hidden');
  }
</script>
