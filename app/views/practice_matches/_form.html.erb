<%= search_form_for @q, url: url, html: { class: 'search-form card p-4 mb-4' } do |form| %>
  <% if practice_match.present? && practice_match.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(practice_match.errors.count, "件のエラー") %>があります:</h4>
      <ul>
        <% practice_match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :prefecture, "都道府県", class: "form-label" %>
    <%= form.search_field :prefecture_tags_name_cont, class: 'form-control', placeholder:'東京' %>
  </div>

  <div class="mb-3">
    <%= form.label :city, "市区町村", class: "form-label" %>
    <%= form.search_field :city_tags_name_cont, class: 'form-control', placeholder:'横浜' %>
  </div>

  <div class="mb-3">
    <%= form.label :genre_generation, "年代", class: "form-label" %>
    <%= form.search_field :profile_genre_generation_tags_name_cont, class: 'form-control', placeholder:'スポ少、小学生' %>
  </div>

  <div class="mb-3">
    <%= form.label :sports, "競技", class: "form-label" %>
    <%= form.search_field :profile_sports_tags_name_cont, class: 'form-control', placeholder:'サッカー' %>
  </div>

  <div class="mb-3">
    <%= form.label :schedule, "日にち", class: "form-label" %>
    <%= form.search_field :schedule_eq, class: 'form-control', placeholder: '2024-02-07', id: "schedule" %>
  </div>

  <%= form.submit '検索', class: 'btn btn-warning text-white' %>
<% end %>


  <style>
    .bin {
      margin: 10px 15px;
      padding: 10px 15px;
      border: 1px solid #ccc; /* 薄いグレーのボーダー */
      border-radius: 4px;
      background-color: #faa61a;
      color: white;

    }

    .form-group {
      display: flex;
      flex-direction: row;
      align-items:
      margin-bottom: 15px;
    }

    .form-label {
      display: block; /* ラベルをブロック要素にして改行させる */ /* ラベルを太字にする（オプション） */
    }

    .form-control {
      border: 1px solid #ccc; /* 薄いグレーのボーダー */
      border-radius: 4px; /* 角を丸くする */
      padding: 8px; /* 内側の余白を追加 */
      width: 100%; /* 幅を100%にして親要素にフィットさせる */
      box-sizing: border-box; /* ボーダーやパディングを含めた幅計算 */
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      flatpickr("#schedule", {
      dateFormat: "Y-m-d", // 日付のフォーマットを設定
    });
  });
  </script>
