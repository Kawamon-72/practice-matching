<div id="<%= dom_id practice_match %>">
  <p>
    <strong>チーム名:</strong>
    <% if practice_match.user && practice_match.user.profile && practice_match.user.profile.name.present? %>
      <%= practice_match.user.profile.name %>
    <% else %>
      未設定
    <% end %>
  </p>

  <p>
    <strong>Sports:</strong>
    <% if practice_match.user && practice_match.user.profile && practice_match.user.profile.sports_tags.present? %>
      <%= practice_match.user.profile.sports_tags.map(&:name).join(", ") %>
    <% else %>
      未設定
    <% end %>
  </p>

  </p>

  <p>
    <strong>Schedule:</strong>
    <%= practice_match.schedule %>
  </p>

  <p>
    <strong>Place:</strong>
    <%= practice_match.place %>
  </p>

  <p>
      <%= button_to "応募", practice_match_likes_path(practice_match_id: practice_match.id), method: :post, class: 'btn btn-primary' %>
      <%= link_to "詳細", practice_match_path(practice_match), class: 'btn' %>
  </p>
</div>
