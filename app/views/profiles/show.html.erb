<p style="color: green"><%= notice %></p>

<div class="container-profile pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-20"><%= t('プロフィール詳細画面') %></h1>
      <table class="table">
        <tr>
          <th scope="row" class="name"><%= Profile.human_attribute_name(:チーム名) %></th>
          <td class="td-name"><%= current_user.profile.name %></td>
        </tr>
        <tr>
          <th scope="row" class="location"><%= Profile.human_attribute_name(:所在地) %></th>
          <td class="td-location"><%= current_user.profile.location %></td>
        </tr>
        <tr>
          <th scope="row" class= "genre"><%= Profile.human_attribute_name(:ジャンル（年代）) %></th>
          <td class= "td-genre"><%= current_user.profile.genre_generation_tags.map(&:name).join(', ') %></td>
        </tr>
        <tr>
          <th scope="row" class="sports"><%= Profile.human_attribute_name(:競技名) %></th>
          <td class="td-sports"><%= current_user.profile.sports_tags.map(&:name).join(', ') %></td>
        </tr>
        <tr>
          <th scope="row" class="introduction"><%= Profile.human_attribute_name(:紹介文) %></th>
          <td class="td-introduction"><%= current_user.profile.introduction %></td>
        </tr>
        <tr>
          <th scope="row"><%= Profile.human_attribute_name(:画像) %></th>
          <td><%= image_tag current_user.profile.avatar.url, size: '100x100' %></td>
        </tr>
      </table>

    <div class="d-flex justify-content-between">
        <%= link_to "編集", edit_profile_path, class: 'btn btn-primary' %>
        <%= link_to "ホーム", root_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<style>
  .table th, .table td {
    background-color: #fff8ec;
    border: 1px solid #ddd;
    padding: 12px 16px;
    vertical-align: middle;
  }

  .table th {
    background-color: #faa61a;
    color: white;
    font-weight: bold;
    text-align: left;
    width: 30%;
  }

  .table td {
    background-color: #fff;
    color: #333;
  }

  .rounded-circle {
    border: 2px solid #ccc;
    box-shadow: 0 0 8px rgba(0,0,0,0.1);
  }
</style>    
