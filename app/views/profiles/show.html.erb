<p style="color: green"><%= notice %></p>

<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= Profile.human_attribute_name(:name) %></th>
          <td><%= current_user.profile.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Profile.human_attribute_name(:location) %></th>
          <td><%= current_user.profile.location %></td>
        </tr>
        <tr>
          <th scope="row"><%= Profile.human_attribute_name(:genre_generation_tags) %></th>
          <td><%= current_user.profile.genre_generation_tags.map(&:name).join(', ') %></td>
        </tr>
        <tr>
          <th scope="row"><%= Profile.human_attribute_name(:sports_tags_name) %></th>
          <td><%= current_user.profile.sports_tags.map(&:name).join(', ') %></td>
        </tr>
        <tr>
          <th scope="row"><%= Profile.human_attribute_name(:introduction) %></th>
          <td><%= current_user.profile.introduction %></td>
        </tr>
        <tr>
          <th scope="row"><%= Profile.human_attribute_name(:avatar) %></th>
          <td><%= image_tag current_user.profile.avatar.url, class: 'rounded-circle', size: '100x100' %></td>
        </tr>
      </table>

    <%= link_to "編集", edit_path %>
    <%= link_to "ホーム", root_path %>
    </div>
  </div>
</div>
